@model InventoryManagementApp.ViewModels.Inventory.InventoryCreateViewModel
@{
    var inventory = ViewData["Inventory"] as InventoryManagementApp.Models.Inventory;
}

<div class="modal fade" id="addItemModal" tabindex="-1" aria-labelledby="addItemModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <form asp-action="AddItem" asp-controller="InventoryItems" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="addItemModalLabel">Add New Item</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" name="InventoryId" value="@inventory?.Id" />

                    @if (inventory == null)
                    {
                        <div class="alert alert-warning">Inventory not found.</div>
                    }
                    else
                    {
                        @* String *@
                        @for (int i = 1; i <= 3; i++)
                        {
                            var stateProp = (bool)inventory.GetType().GetProperty($"CustomString{i}State")?.GetValue(inventory)!;
                            var nameProp = inventory.GetType().GetProperty($"CustomString{i}Name")?.GetValue(inventory) as string;

                            if (stateProp)
                            {
                                <div class="mb-3">
                                    <label class="form-label">@nameProp</label>
                                    <input type="text" class="form-control" name="CustomString@iValue" />
                                </div>
                            }
                        }

                        @* Int *@
                        @for (int i = 1; i <= 3; i++)
                        {
                            var stateProp = (bool)inventory.GetType().GetProperty($"CustomInt{i}State")?.GetValue(inventory)!;
                            var nameProp = inventory.GetType().GetProperty($"CustomInt{i}Name")?.GetValue(inventory) as string;

                            if (stateProp)
                            {
                                <div class="mb-3">
                                    <label class="form-label">@nameProp</label>
                                    <input type="number" class="form-control" name="CustomInt@iValue" />
                                </div>
                            }
                        }

                        @* Bool *@
                        @for (int i = 1; i <= 3; i++)
                        {
                            var stateProp = (bool)inventory.GetType().GetProperty($"CustomBool{i}State")?.GetValue(inventory)!;
                            var nameProp = inventory.GetType().GetProperty($"CustomBool{i}Name")?.GetValue(inventory) as string;

                            if (stateProp)
                            {
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="checkbox" name="CustomBool@iValue" />
                                    <label class="form-check-label">@nameProp</label>
                                </div>
                            }
                        }

                        @* Multiline *@
                        @for (int i = 1; i <= 3; i++)
                        {
                            var stateProp = (bool)inventory.GetType().GetProperty($"CustomMultiline{i}State")?.GetValue(inventory)!;
                            var nameProp = inventory.GetType().GetProperty($"CustomMultiline{i}Name")?.GetValue(inventory) as string;

                            if (stateProp)
                            {
                                <div class="mb-3">
                                    <label class="form-label">@nameProp</label>
                                    <textarea class="form-control" name="CustomMultiline@iValue"></textarea>
                                </div>
                            }
                        }

                        @* Link *@
                        @for (int i = 1; i <= 3; i++)
                        {
                            var stateProp = (bool)inventory.GetType().GetProperty($"CustomLink{i}State")?.GetValue(inventory)!;
                            var nameProp = inventory.GetType().GetProperty($"CustomLink{i}Name")?.GetValue(inventory) as string;

                            if (stateProp)
                            {
                                <div class="mb-3">
                                    <label class="form-label">@nameProp</label>
                                    <input type="url" class="form-control" name="CustomLink@iValue" placeholder="https://" />
                                </div>
                            }
                        }
                    }
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Item</button>
                </div>
            </form>
        </div>
    </div>
</div>
