@model IEnumerable<Inventory>

@{
    ViewData["Title"] = "Home";
}

<div class="container mt-4">

    <!-- Last Inventories -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light fw-bold">
            Last Inventories
        </div>
        <div class="card-body p-0" style="max-height: 250px; overflow-y: auto;">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Creator</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var inv in Model)
                        {
                            <tr>
                                <td>@inv.Title</td>
                                <td>@inv.Description</td>
                                <td>@(inv.Creator?.Id ?? "Unknown")</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="text-center text-muted">No inventories found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (User.Identity.IsAuthenticated)
        {
            <div class="card-footer text-start">
                <a asp-controller="Inventory" asp-action="Create" class="btn btn-primary">Create Inventory</a>
            </div>
        }
    </div>

    <!-- Top 5 Popular Inventories -->
    <div class="card shadow-sm">
        <div class="card-header bg-light fw-bold">
            Top 5 Popular Inventories
        </div>
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Inventory Name</th>
                    </tr>
                </thead>
                <tbody>
                    <tr><td>1</td><td>Inventory1</td></tr>
                    <tr><td>2</td><td>Inventory2</td></tr>
                    <tr><td>3</td><td>Inventory3</td></tr>
                    <tr><td>4</td><td>Inventory4</td></tr>
                    <tr><td>5</td><td>Inventory5</td></tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
