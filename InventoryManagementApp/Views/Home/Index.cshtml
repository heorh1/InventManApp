<h2>Welcome to Inventory App</h2>

@if (User.Identity?.IsAuthenticated ?? false)
{
    <a class="btn btn-primary" asp-controller="Inventory" asp-action="Create">Create Inventory</a>
    <a class="btn btn-secondary" asp-controller="Inventory" asp-action="Index">View My Inventories</a>
}
else
{
    <p>Please <a asp-page="/Account/Login">login</a> to create inventories.</p>
}
