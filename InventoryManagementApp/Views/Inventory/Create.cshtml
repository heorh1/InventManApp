@model InventoryManagementApp.ViewModels.Inventory.InventoryCreateViewModel

@{
    ViewData["Title"] = "Create Inventory";
}

<h2>Create Inventory</h2>

<ul class="nav nav-tabs mb-3" id="inventoryTabs" role="tablist">
    <li class="nav-item"><a class="nav-link active" id="items-tab" data-bs-toggle="tab" href="#items" role="tab">Items</a></li>
    <li class="nav-item"><a class="nav-link" id="chat-tab" data-bs-toggle="tab" href="#chat" role="tab">Chat</a></li>
    <li class="nav-item"><a class="nav-link" id="settings-tab" data-bs-toggle="tab" href="#settings" role="tab">Settings</a></li>
    <li class="nav-item"><a class="nav-link" id="customid-tab" data-bs-toggle="tab" href="#customid" role="tab">CustomID</a></li>
    <li class="nav-item"><a class="nav-link" id="fields-tab" data-bs-toggle="tab" href="#fields" role="tab">Fields</a></li>
    <li class="nav-item"><a class="nav-link" id="access-tab" data-bs-toggle="tab" href="#access" role="tab">Access</a></li>
    <li class="nav-item"><a class="nav-link" id="stats-tab" data-bs-toggle="tab" href="#stats" role="tab">Stats</a></li>
</ul>

<div class="tab-content">
    <!-- Plugs -->
    <div class="tab-pane fade show active p-3" id="items" role="tabpanel">In progress…</div>
    <div class="tab-pane fade p-3" id="chat" role="tabpanel">In progress…</div>
    <div class="tab-pane fade p-3" id="settings" role="tabpanel">In progress…</div>
    <div class="tab-pane fade p-3" id="customid" role="tabpanel">In progress…</div>
    <div class="tab-pane fade p-3" id="access" role="tabpanel">In progress…</div>
    <div class="tab-pane fade p-3" id="stats" role="tabpanel">In progress…</div>

    <!-- Fields -->
    <div class="tab-pane fade p-3" id="fields" role="tabpanel">
        <form asp-action="Create" method="post">
            @foreach (var group in new[] { "String", "Int", "Bool", "Multiline", "Link" })
            {
                <h5>@group fields</h5>
                @for (int i = 1; i <= 3; i++)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="@Model.GetType().GetProperty($"Custom{group}{i}State")!.GetValue(Model)" />
                        <label class="form-check-label">Field @i</label>
                    </div>
                    <div class="mb-3">
                        <input class="form-control mb-1" placeholder="Name" asp-for="@Model.GetType().GetProperty($"Custom{group}{i}Name")!.GetValue(Model)" />
                        <input class="form-control" placeholder="Description (tooltip)" asp-for="@Model.GetType().GetProperty($"Custom{group}{i}Description")!.GetValue(Model)" />
                    </div>
                }
            }

            <button type="submit" class="btn btn-primary mt-2">Create Inventory</button>
        </form>
    </div>
</div>
