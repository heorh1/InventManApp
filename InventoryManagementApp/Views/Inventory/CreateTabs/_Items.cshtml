@model InventoryManagementApp.ViewModels.InventoryViewModels.AddItemViewModel
@{
    var structure = ViewBag.Structure as InventoryManagementApp.ViewModels.InventoryViewModels.InventoryCreateViewModel;
}

<h4>Add Item</h4>

<form asp-action="AddItem" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="InventoryId" />

    <div class="row">
        @if (structure != null)
        {
            @if (!string.IsNullOrEmpty(structure.CustomString1Name))
            {
                <div class="col-md-4 mb-3">
                    <label>@structure.CustomString1Name</label>
                    <input asp-for="CustomString1Value" class="form-control" />
                </div>
            }
            @if (!string.IsNullOrEmpty(structure.CustomString2Name))
            {
                <div class="col-md-4 mb-3">
                    <label>@structure.CustomString2Name</label>
                    <input asp-for="CustomString2Value" class="form-control" />
                </div>
            }
            @if (!string.IsNullOrEmpty(structure.CustomString3Name))
            {
                <div class="col-md-4 mb-3">
                    <label>@structure.CustomString3Name</label>
                    <input asp-for="CustomString3Value" class="form-control" />
                </div>
            }

            @if (!string.IsNullOrEmpty(structure.CustomInt1Name))
            {
                <div class="col-md-4 mb-3">
                    <label>@structure.CustomInt1Name</label>
                    <input asp-for="CustomInt1Value" type="number" class="form-control" />
                </div>
            }
            @if (!string.IsNullOrEmpty(structure.CustomInt2Name))
            {
                <div class="col-md-4 mb-3">
                    <label>@structure.CustomInt2Name</label>
                    <input asp-for="CustomInt2Value" type="number" class="form-control" />
                </div>
            }
            @if (!string.IsNullOrEmpty(structure.CustomInt3Name))
            {
                <div class="col-md-4 mb-3">
                    <label>@structure.CustomInt3Name</label>
                    <input asp-for="CustomInt3Value" type="number" class="form-control" />
                </div>
            }

            @if (!string.IsNullOrEmpty(structure.CustomBool1Name))
            {
                <div class="col-md-4 mb-3 form-check">
                    <input asp-for="CustomBool1Value" class="form-check-input" type="checkbox" />
                    <label class="form-check-label">@structure.CustomBool1Name</label>
                </div>
            }
            @if (!string.IsNullOrEmpty(structure.CustomBool2Name))
            {
                <div class="col-md-4 mb-3 form-check">
                    <input asp-for="CustomBool2Value" class="form-check-input" type="checkbox" />
                    <label class="form-check-label">@structure.CustomBool2Name</label>
                </div>
            }
            @if (!string.IsNullOrEmpty(structure.CustomBool3Name))
            {
                <div class="col-md-4 mb-3 form-check">
                    <input asp-for="CustomBool3Value" class="form-check-input" type="checkbox" />
                    <label class="form-check-label">@structure.CustomBool3Name</label>
                </div>
            }

            @if (!string.IsNullOrEmpty(structure.CustomMultiline1Name))
            {
                <div class="col-md-12 mb-3">
                    <label>@structure.CustomMultiline1Name</label>
                    <textarea asp-for="CustomMultiline1Value" class="form-control"></textarea>
                </div>
            }
            @if (!string.IsNullOrEmpty(structure.CustomMultiline2Name))
            {
                <div class="col-md-12 mb-3">
                    <label>@structure.CustomMultiline2Name</label>
                    <textarea asp-for="CustomMultiline2Value" class="form-control"></textarea>
                </div>
            }
            @if (!string.IsNullOrEmpty(structure.CustomMultiline3Name))
            {
                <div class="col-md-12 mb-3">
                    <label>@structure.CustomMultiline3Name</label>
                    <textarea asp-for="CustomMultiline3Value" class="form-control"></textarea>
                </div>
            }

            @if (!string.IsNullOrEmpty(structure.CustomLink1Name))
            {
                <div class="col-md-4 mb-3">
                    <label>@structure.CustomLink1Name</label>
                    <input asp-for="CustomLink1Value" class="form-control" />
                </div>
            }
            @if (!string.IsNullOrEmpty(structure.CustomLink2Name))
            {
                <div class="col-md-4 mb-3">
                    <label>@structure.CustomLink2Name</label>
                    <input asp-for="CustomLink2Value" class="form-control" />
                </div>
            }
            @if (!string.IsNullOrEmpty(structure.CustomLink3Name))
            {
                <div class="col-md-4 mb-3">
                    <label>@structure.CustomLink3Name</label>
                    <input asp-for="CustomLink3Value" class="form-control" />
                </div>
            }
        }
        else
        {
            <p>Inventory structure not loaded.</p>
        }
    </div>

    <button type="submit" class="btn btn-primary">Add Item</button>
</form>
