    {
        <div class="mb-3 form-check">
            <input asp-for="@Model.GetType().GetProperty($"CustomBool{i}State")" class="form-check-input" />
            <label asp-for="@Model.GetType().GetProperty($"CustomBool{i}State")" class="form-check-label">Enable Field @i</label>
        </div>
        <div class="mb-3">
            <input asp-for="@Model.GetType().GetProperty($"CustomBool{i}Name")" class="form-control" placeholder="Field Name" />
            <textarea asp-for="@Model.GetType().GetProperty($"CustomBool{i}Description")" class="form-control mt-1" placeholder="Description"></textarea>
        </div>
    }

    <h5>Multi-line Text Fields</h5>
