@model InventoryManagementApp.ViewModels.Inventory.InventoryCreateViewModel

<div class="tab-pane fade" id="fields" role="tabpanel">

    <h5>Single-line Text Fields</h5>
    @for (int i = 1; i <= 3; i++)
    {
        <div class="mb-3 form-check">
            <input asp-for="@Model.GetType().GetProperty($"CustomString{i}State")" class="form-check-input" />
            <label asp-for="@Model.GetType().GetProperty($"CustomString{i}State")" class="form-check-label">Enable Field @i</label>
        </div>
        <div class="mb-3">
            <input asp-for="@Model.GetType().GetProperty($"CustomString{i}Name")" class="form-control" placeholder="Field Name" />
            <textarea asp-for="@Model.GetType().GetProperty($"CustomString{i}Description")" class="form-control mt-1" placeholder="Description"></textarea>
        </div>
    }

    <h5>Numeric Fields</h5>
    @for (int i = 1; i <= 3; i++)
    {
        <div class="mb-3 form-check">
            <input asp-for="@Model.GetType().GetProperty($"CustomInt{i}State")" class="form-check-input" />
