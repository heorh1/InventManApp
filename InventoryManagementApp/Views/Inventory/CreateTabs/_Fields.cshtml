        </div>
    }

    <h5>Document/Image Fields</h5>
    @for (int i = 1; i <= 3; i++)
    {
        <div class="mb-3 form-check">
            <input asp-for="@Model.GetType().GetProperty($"CustomLink{i}State")" class="form-check-input" />
